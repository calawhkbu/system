{
  "fillParent": true,
  "components": [
    {
      "is": "TableTool",
      "props": {
        "back": "/admin",
        "reportingKey": "i18ns",
        "jql": "i18ns",
        "showFilterBar": true,
        "enableShare": false,
        "enableSetting": false,
        "noPartyGroupFilters": true,
        "newReport": {
          "filters": {
            "isActive" : true
          },
          "configurations": {
            "i18nContext": "I18nPage",
            "clickable": true,
            "draggable": true,
            "sorting": {},
            "expanded" : {},
            "pagination": {
              "current": 0,
              "perPage": 20,
              "remote" : true
            }
          }
        },

        "icons": [
          {
            "icon": "add",
            "click": [
              {
                "type": "router",
                "otherParams": {
                  "func": "push",
                  "path": "/i18n/create"
                }
              }
            ]
          }
        ],

        "fieldOptions": [
          {
            "key": "id",
            "hidden": true
          },
          {
            "key": "version",
            "hidden": true
          },
          {
            "key": "partyGroupCode",
            "hidden": true
          },
          {
            "label": "canResetDefault",
            "key": "canResetDefault",
            "sortable": false,
            "clickFunction": {
              "type": "axios",
              "otherParams": {
                "axiosParams": {
                  "url": "/api/i18n/resetDefault/{{row.id}}",
                  "method": "POST"
                }
              },
              "afterActions": [
                {
                  "type": "notify",
                  "otherParams": {
                    "notification": "Notify.resetDefaultSuccess"
                  }
                }
              ]
            },

            "tdComponent": {
              "hideIfFalse" : true,

              "props": {

                "slotComponents": [
                  {
                    "is": "icon",
                    "props": {
                      "icon": "refresh"
                    }
                  }
                ]
              }
            },
            "width": 50
          }

        ],
        "filters": [
          {
            "name": "key",
            "i18nContext" : "I18nPage",
            "type": "text"
          }
        ],
        "clickFunction": {
          "type": "router",
          "otherParams": {
            "func": "push",
            "path": "/i18n/{{id}}"
          }
        }
      }
    }
  ]
}
