{
  "components": [{
    "is": "Widget",
    "props": {
      "settingProp": {
        "overrideType": "schedule",
        "initAxiosParams": {
          "url": "api/schedule/{{context.$route.params.params}}",
          "headers": {
            "Cache-Control": "{{cache}}"
          }
        },
        "defaultAxiosParams": {
          "url": "default/schedule"
        },
        "validateAxiosParams": {
          "method": "post",
          "url": "api/schedule/validate/{{id}}"
        },
        "saveAxiosParams": {
          "method": "post",
          "url": "api/schedule"
        },
        "primaryKey": "id",
        "modeFunction": [
          "const modes = ['create', 'detail','edit'];",
          "const selectedMode = isNaN(Number(mode)) ? mode : 'detail'",
          "if (!modes.includes(selectedMode)) {throw new Error('This mode (' + selectedMode + ') is not allowed');}",
          "return selectedMode"
        ],
        "haveTermOnCreate": false,
        "haveTermOnEdit": false,
        "widgetComponentSetting": {
          "create": {
            "readonly": false,
            "stepper": 0,
            "next": false,
            "saveIcon": "create"
          },
          "detail": {
            "readonly": true
          },
          "edit": {
            "readonly": false,
            "stepper": 0,
            "saveIcon": "save"
          }
        }
      }
    }
  }]
}
