{
  "layout": "CardLayout",
  "components": [
    {
      "is": "SimpleForm",
      "props": {
        "form": {
          "password": "",
          "confirmPassword": ""
        },
        "style": {
          "min-height": "100%"
        },
        "fields": [
          {
            "name": "password",
            "label": "Auth.password",
            "component": "DisplayPasswordInput",
            "validator": [
              "required"
            ]
          },
          {
            "name": "confirmPassword",
            "label": "Auth.confirmPassword",
            "component": "DisplayPasswordInput",
            "validator": [
              "required",
              {
                "type": "compare",
                "value2": "password"
              }
            ]
          }
        ],
        "submitActions": [
          {
            "type": "dispatch",
            "otherParams": {
              "name": "auth/changePassword"
            },
            "errorMessage": "ChangePassword.fail",
            "afterActions": [
              {
                "type": "notify",
                "otherParams": {
                  "notification": "ChangePassword.success",
                  "needTranslate": true
                }
              },
              {
                "type": "router",
                "otherParams": {
                  "redirect": "/login"
                }
              }
            ]
          }
        ]
      },
      "slots": [
        {
          "is": "DynamicComponent",
          "name": "pre-form",
          "props": {
            "style": {
              "margin-bottom": "25px"
            },
            "components": [
              {
                "is": "v-img",
                "props": {
                  "src": "/img/logo/swivel-logo-light.svg",
                  "style": {
                    "width": "484px"
                  }
                }
              }
            ]
          }
        },
        {
          "is": "DynamicComponent",
          "name": "post-form",
          "props": {
            "style": {
              "display": "flex"
            },
            "components": [
              {
                "is": "v-spacer"
              },
              {
                "is": "v-btn",
                "props": {
                  "flat": true,
                  "type": "submit"
                },
                "slots": [
                  {
                    "is": "i18nText",
                    "name": "default",
                    "props": {
                      "i18nKey": "Auth.ChangePassword"
                    }
                  }
                ]
              }
            ]
          }
        }
      ]
    }
  ]
}
