{
  "fillParent": true,
  "components": [
    {
      "is": "TableTool",
      "props": {
        "back": "/admin",
        "reportingKey": "card-accesses",
        "jql": "card-accesses",
        "showFilterBar": true,
        "enableShare": false,
        "enableSetting": false,
        "noPartyGroupFilters": true,
        "newReport": {
          "filters": {
            "activeStatus" : {
              "value" : "active"
            }
          },
          "configurations": {
            "i18nContext": "CardAccessPage",
            "clickable": true,
            "draggable": true,
            "pagination": {
              "current": 0,
              "perPage": 20,
              "remote" : true
            }
          }
        },

        "icons": [
          {
            "icon": "add",
            "click": [
              {
                "type": "router",
                "otherParams": {
                  "func": "push",
                  "path": "/card-access/create"
                }
              }
            ]
          }
        ],

        "fieldOptions": [
          {
            "key": "id",
            "sql": {
              "classname":"ColumnExpression","table":"card_access","name":"id"
            },
            "hidden": true
          },

          {
            "key": "name"
          },          
          {
            "key": "partyGroupCode",
            "hidden": true
          },

          {
            "key": "disabled",
            "boolean": true
          },
          {
            "key": "partyGroupSpecific",
            "boolean": true
          },

          {
            "key": "isActive",
            "hidden" : true,
            "boolean": true
          },
          {
            "label": "",
            "key": "canDelete",
            "boolean" : true,
            "sortable": false,
            "clickFunction": {
              "type": "axios",
              "otherParams": {
                "axiosParams": {
                  "url": "/api/cardAccess/{{row.id}}",
                  "method": "DELETE"
                }
              },
              "afterActions": [
                {
                  "type": "notify",
                  "otherParams": {
                    "notification": "Notify.deleteSuccess"
                  }
                }
              ]
            },

            "tdComponent": {
              "hideIfFalse" : true,
              "props": {
                "slotComponents": [
                  {
                    "is": "icon",
                    "props": {
                      "icon": "delete"
                    }
                  }
                ]
              }
            },
            "width": 50
          },

          {
            "label": "",
            "key": "canRestore",
            "sortable": false,
            "boolean" : true,
            "clickFunction": {
              "type": "axios",
              "otherParams": {
                "axiosParams": {
                  "url": "/api/cardAccess/restore/{{row.id}}",
                  "method": "POST"
                }
              },
              "afterActions": [
                {
                  "type": "notify",
                  "otherParams": {
                    "notification": "Notify.restoreSuccess"
                  }
                }
              ]
            },

            "tdComponent": {
              "props": {
                "slotComponents": [
                  {
                    "is": "icon",
                    "props": {
                      "icon": "refresh"
                    }
                  }
                ]
              }
            },
            "width": 50
          }
        ],
        "filters" : [
          {
            "name" : "activeStatus",
            "i18nContext" : "CardAccess",
            "type" : "list",
            "props" : {
              "items" :[

                {
                  "label" : "active",
                  "value" : "active"
                },
                {
                  "label" : "deleted",
                  "value" : "deleted"
                }
              ]


            }
          }
        ],
        "clickFunction": {
          "type": "router",
          "otherParams": {
            "func": "push",
            "path": "/card-access/{{id}}"
          }
        }
      }
    }
  ]
}
