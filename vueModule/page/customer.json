{
  "layout": "MainLayout",
  "components": [{
    "is": "Widget",
    "props": {
      "initUrl": "api/partyGroup/{{id}}",
      "saveUrl": "api/partyGroup",
      "primaryKey": "id",
      "canEdit": true,
      "top": {
        "assignment": [{
            "is": "v-btn",
            "props": {
              "flat": true,
              "icon": true
            },
            "events": {
              "click.stop": [{
                "type": "router",
                "otherParams": {
                  "func": "push",
                  "path": "/admin"
                }
              }]
            },
            "slots": [{
              "is": "Icon",
              "props": {
                "icon": "arrow_back"
              }
            }]
          },
          {
            "is": "DynamicComponent",
            "props": {
              "style": {
                "align-items": "center",
                "box-sizing": "border-box",
                "position": "sticky",
                "justify-content": "center",
                "flex-shrink": 0,
                "display": "flex"
              },
              "components": [{
                  "is": "I18nText",
                  "props": {
                    "class": "headline",
                    "i18nKey": "CustomerPage.title"
                  }
                },
                {
                  "is": "span",
                  "props": {
                    "class": "flex-grow"
                  }
                }
              ]
            }
          }
        ],
        "edit": "assignment"
      },
      "components": {
        "assignment": [{
            "is": "DynamicComponent",
            "props": {
              "class": "grid grid-full",
              "components": [{
                  "is": "DynamicComponent",
                  "props": {
                    "class": "xs-12 md-4",
                    "style": {
                      "padding-right": "4px",
                      "padding-bottom": "4px"
                    },
                    "components": [{
                      "is": "AsyncComponent",
                      "props": {
                        "class": "xs-12",
                        "layoutName": "customer/basic-information"
                      }
                    }]
                  }
                },
                {
                  "is": "DynamicComponent",
                  "props": {
                    "class": "xs-12 md-8",
                    "style": {
                      "padding-left": "4px",
                      "padding-bottom": "4px"
                    },
                    "components": [{
                      "is": "AsyncComponent",
                      "props": {
                        "class": "xs-12",
                        "layoutName": "customer/party"
                      }
                    }]
                  }
                }
              ]
            }
          },
          {
            "is": "DynamicComponent",
            "props": {
              "class": "grid grid-full",
              "components": [{
                  "is": "DynamicComponent",
                  "props": {
                    "class": "xs-12 md-4",
                    "style": {
                      "padding-right": "4px",
                      "padding-bottom": "4px"
                    },
                    "components": [{
                      "is": "AsyncComponent",
                      "props": {
                        "class": "xs-12",
                        "layoutName": "customer/default-preference"
                      }
                    }]
                  }
                },
                {
                  "is": "DynamicComponent",
                  "props": {
                    "class": "xs-12 md-8",
                    "style": {
                      "padding-left": "4px",
                      "padding-bottom": "4px"
                    },
                    "components": [{
                      "is": "AsyncComponent",
                      "props": {
                        "class": "xs-12",
                        "layoutName": "customer/alert-preference"
                      }
                    }]
                  }
                }
              ]
            }
          }
        ],
        "edit": "assignment"
      }
    }
  }]
}