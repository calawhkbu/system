{
  "layout": "MainLayout",
  "components": [
    {
      "is": "Widget",
      "props": {
        "initUrl": "api/partyGroup/{{id}}",
        "saveUrl": "api/partyGroup",
        "primaryKey": "id",
        "topSlots": [
          {
            "is": "RouterButton",
            "props": {
              "routerParams": -1,
              "flat": true,
              "icon": true,
              "defaultSlots": [
                {
                  "is": "Icon",
                  "props": {
                    "icon": "arrow_back"
                  }
                }
              ]
            }
          },
          {
            "is": "DynamicComponent",
            "props": {
              "style": {
                "align-items": "center",
                "box-sizing": "border-box",
                "position": "sticky",
                "justify-content": "center",
                "flex-shrink": 0,
                "display": "flex"
              },
              "components": [
                {
                  "is": "I18nText",
                  "props": {
                    "class": "headline",
                    "i18nKey": "CustomerPage.title"
                  }
                },
                {
                  "is": "span",
                  "props": {
                    "class": "flex-grow"
                  }
                }
              ]
            }
          }
        ],
        "components": {
          "root": [
            {
              "id": "BasicInformation",
              "layout": "v-card",
              "style": {
                "margin-bottom": "25px"
              },
              "components": [
                {
                  "is": "SimpleForm",
                  "props": {
                    "dispatchreadonly": "$store.state.widget.readOnly",
                    "form": "$store.state.widget.data",
                    "onChangeFunctions": [
                      {
                        "type": "dispatch",
                        "otherParams": {
                          "name": "widget/updateData"
                        }
                      }
                    ],
                    "fields": [
                      {
                        "name": "logoURL",
                        "component": "FileField",
                        "class": "xs-12",
                        "props": {
                          "convertBase64": true,
                          "defaultImage": "/img/logo/swivel-logo-light.svg",
                          "style": {
                            "display": "flex",
                            "justify-content": "center"
                          },
                          "imageProps": {
                            "style": {
                              "max-height": "150px"
                            }
                          }
                        }
                      },
                      {
                        "component": "v-text-field",
                        "class": "xs-6",
                        "label": "CustomerPage.customerName",
                        "name": "name",
                        "validator": ["required"]
                      },
                      {
                        "component": "v-text-field",
                        "class": "xs-6",
                        "label": "CustomerPage.customerCode",
                        "name": "code",
                        "validator": ["nospace"]
                      },
                      {
                        "component": "DateTimePicker",
                        "class": "xs-6",
                        "label": "CustomerPage.customerCode",
                        "name": "createdAt"
                      }
                    ]
                  },
                  "slots": [
                    {
                      "name": "post-form",
                      "is": "div"
                    }
                  ]
                }
              ]
            },
            {
              "id": "Preference",
              "layout": "v-card",
              "style": {
                "margin-bottom": "25px"
              },
              "components": [
                {
                  "is": "SimpleForm",
                  "props": {
                    "dispatchreadonly": "$store.state.widget.readOnly",
                    "form": "$store.state.widget.data.configuration",
                    "onChangeFunctions": [
                      {
                        "type": "dispatch",
                        "otherParams": {
                          "name": "widget/updateData",
                          "path": "configuration"
                        }
                      }
                    ],
                    "fields": [
                      {
                        "label": "config.locale",
                        "name": "defaultLocale",
                        "component": "AsyncSelect",
                        "class": "xs-12 md-6",
                        "props": {
                          "item-text": "value",
                          "item-value": "key",
                          "url": "api/i18n/available-languages"
                        }
                      },
                      {
                        "label": "config.timezone",
                        "name": "defaultTimezone",
                        "component": "AsyncSelect",
                        "class": "xs-12 md-6",
                        "props": {
                          "item-text": "name",
                          "item-value": "name",
                          "type": "local",
                          "url": "$moment.tz.names"
                        }
                      },
                      {
                        "label": "config.dateFormat",
                        "name": "defaultDateFormat",
                        "component": "v-text-field",
                        "class": "xs-12 md-4"
                      },
                      {
                        "label": "config.timeFormat",
                        "name": "defaultTimeFormat",
                        "component": "v-text-field",
                        "class": "xs-12 md-4"
                      },
                      {
                        "label": "config.dateTimeFormat",
                        "name": "defaultDateTimeFormat",
                        "component": "v-text-field",
                        "class": "xs-12 md-4"
                      }
                    ]
                  },
                  "slots": [
                    {
                      "name": "post-form",
                      "is": "div"
                    }
                  ]
                }
              ]
            },
            {
              "id": "Party",
              "layout": "v-card",
              "style": {
                "margin-bottom": "25px"
              },
              "components": [
                {
                  "is": "SimpleForm",
                  "props": {
                    "dispatchreadonly": "$store.state.widget.readOnly",
                    "form": "$store.state.widget.data",
                    "onChangeFunctions": [
                      {
                        "type": "dispatch",
                        "otherParams": {
                          "name": "widget/updateData"
                        }
                      }
                    ],
                    "fields": [
                      {
                        "label": "CustomerPage.party",
                        "name": "parties",
                        "component": "TableField",
                        "class": "xs-12",
                        "props": {
                          "fields": [
                            {
                              "label": "CustomerPage.partyCode",
                              "name": "erpCode",
                              "component": "v-text-field",
                              "style": {
                                "width": "25%"
                              }
                            },
                            {
                              "label": "CustomerPage.partyShortName",
                              "name": "shortName",
                              "component": "v-text-field",
                              "style": {
                                "width": "25%"
                              }
                            },
                            {
                              "label": "CustomerPage.partyName",
                              "name": "name",
                              "component": "v-text-field",
                              "style": {
                                "width": "48%"
                              }
                            }
                          ]
                        }
                      }
                    ]
                  },
                  "slots": [
                    {
                      "name": "post-form",
                      "is": "div"
                    }
                  ]
                }
              ]
            }
          ],
          "created": [

          ]
        }
      }
    }
  ]
}
