{
  "layout": "MainLayout",
  "components": [
    {
      "is": "Widget",
      "props": {
        "initUrl": "api/partyGroup/{{id}}",
        "saveUrl": "api/partyGroup",
        "primaryKey": "id",
        "canEdit": true,
        "topSlots": [
          {
            "is": "v-btn",
            "props": {
              "flat": true,
              "icon": true
            },
            "events": {
              "click.stop": [
                {
                  "type": "router",
                  "otherParams": {
                    "func": "go",
                    "go": -1
                  }
                }
              ]
            },
            "slots": [
              {
                "is": "Icon",
                "props": {
                  "icon": "arrow_back"
                }
              }
            ]
          },
          {
            "is": "DynamicComponent",
            "props": {
              "style": {
                "align-items": "center",
                "box-sizing": "border-box",
                "position": "sticky",
                "justify-content": "center",
                "flex-shrink": 0,
                "display": "flex"
              },
              "components": [
                {
                  "is": "I18nText",
                  "props": {
                    "class": "headline",
                    "i18nKey": "CustomerPage.title"
                  }
                },
                {
                  "is": "span",
                  "props": {
                    "class": "flex-grow"
                  }
                }
              ]
            }
          }
        ],
        "components": {
          "assignment": [
            {
              "is": "AsyncComponent",
              "props": {
                "class": "xs-12",
                "layoutName": "customer/basic-information"
              }
            },
            {
              "is": "AsyncComponent",
              "props": {
                "class": "xs-12",
                "layoutName": "customer/default-preference"
              }
            },
            {
              "is": "AsyncComponent",
              "props": {
                "class": "xs-12",
                "layoutName": "customer/party"
              }
            }
          ],
          "edit": [
            {
              "is": "WidgetPanel",
              "props": {
                "initUrl": "api/partyGroup/{{id}}",
                "saveUrl": "api/partyGroup",
                "primaryKey": "id"
              },
              "slots": [
                {
                  "name": "default",
                  "is": "DynamicComponent",
                  "props": {
                    "components": [
                      {
                        "is": "AsyncComponent",
                        "props": {
                          "class": "xs-12",
                          "layoutName": "customer/basic-information"
                        }
                      },
                      {
                        "is": "AsyncComponent",
                        "props": {
                          "class": "xs-12",
                          "layoutName": "customer/default-preference"
                        }
                      },
                      {
                        "is": "AsyncComponent",
                        "props": {
                          "class": "xs-12",
                          "layoutName": "customer/party"
                        }
                      }
                    ]
                  }
                }
              ]
            },
            {

            }
          ],
          "create": [

          ]
        }
      }
    }
  ]
}
