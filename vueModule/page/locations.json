{
  "fillParent": true,
  "components": [
    {
      "is": "TableTool",
      "props": {
        "back": "/admin",
        "reportingKey": "locations",
        "jql": "locations",
        "showFilterBar": true,
        "enableShare": false,
        "enableSetting": false,
        "noPartyGroupFilters": true,
        "newReport": {
          "configurations": {
            "i18nContext": "LocationPage",
            "clickable": true,
            "draggable": true,
            "sorting": {},
            "expanded" : {},
            "pagination": {
              "current": 0,
              "perPage": 20,
              "remote" : true
            }
          }
        },

      

        "icons": [
          {
            "icon": "add",
            "click": [
              {
                "type": "router",
                "otherParams": {
                  "func": "push",
                  "path": "/location/create"
                }
              }
            ]
          }
        ],

        "fieldOptions": [
          {
            "key": "id",
            "hidden": true
          },
          {
            "label": "",
            "key": "can_delete",
            "sortable": false,
            "clickFunction": {
              "type": "axios",
              "otherParams": {
                "axiosParams": {
                  "url": "/api/location/{{row.id}}",
                  "method": "DELETE"
                }
              },
              "afterActions": [
                {
                  "type": "notify",
                  "otherParams": {
                    "notification": "Notify.deleteSuccess"
                  }
                }
              ]
            },

            "tdComponent": {
              "props": {
                "slotComponents": [
                  {
                    "is": "icon",
                    "props": {
                      "icon": "delete"
                    }
                  }
                ]
              }
            },
            "width": 50
          },

          {
            "label": "",
            "key": "can_restore",
            "sortable": false,
            "clickFunction": {
              "type": "axios",
              "otherParams": {
                "axiosParams": {
                  "url": "/api/location/restore/{{row.id}}",
                  "method": "POST"
                }
              },
              "afterActions": [
                {
                  "type": "notify",
                  "otherParams": {
                    "notification": "Notify.restoreSuccess"
                  }
                }
              ]
            },

            "tdComponent": {
              "props": {
                "slotComponents": [
                  {
                    "is": "icon",
                    "props": {
                      "icon": "refresh"
                    }
                  }
                ]
              }
            },
            "width": 50
          }
        ],
        "filters": [
          {
            "name": "countryCode",
            "type": "text"
          },
          {
            "name": "isActive",
            "type": "boolean"
          }
        ],
        "clickFunction": {
          "type": "router",
          "otherParams": {
            "func": "push",
            "path": "/location/{{id}}"
          }
        }
      }
    }
  ]
}
