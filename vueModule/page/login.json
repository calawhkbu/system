{
  "layout": "CardLayout",
  "layoutAsync": true,
  "components": [
    {
      "is": "SimpleForm",
      "props": {
        "showPreFormOnSubmit": true,
        "showFormOnSubmit": false,
        "showPostFormOnLoading": false,
        "form": {
          "password": "",
          "username": ""
        },
        "style": {
          "display": "flex",
          "flex-direction": "column",
          "min-height": "100%"
        },
        "fields": [
          {
            "name": "username",
            "label": "Auth.username",
            "props": {
              "type": "email",
              "browser-autocomplete": "email"
            },
            "component": "v-text-field",
            "validator": [
              "required",
              "isEmail"
            ]
          },
          {
            "name": "password",
            "label": "Auth.password",
            "props": {
              "browser-autocomplete": "password"
            },
            "component": "DisplayPasswordInput",
            "validator": [
              "required"
            ]
          }
        ],
        "submitActions": [
          {
            "type": "dispatch",
            "otherParams": {
              "name": "auth/login",
              "type": "local"
            },
            "afterActions": [
              {
                "type": "router"
              }
            ]
          }
        ]
      },
      "slots": [
        {
          "is": "DynamicComponent",
          "name": "pre-form",
          "props": {
            "style": {
              "flex-grow": 1
            },
            "components": [
              {
                "is": "v-img",
                "props": {
                  "src": "/img/logo/swivel-logo-light.svg",
                  "style": {
                    "width": "484px"
                  }
                }
              }
            ]
          }
        },
        {
          "is": "DynamicComponent",
          "name": "post-form",
          "props": {
            "style": {
              "min-height": "120px"
            },
            "components": [
              {
                "is": "DynamicComponent",
                "props": {
                  "style": {
                    "display": "flex"
                  },
                  "components": [
                    {
                      "is": "v-spacer"
                    },
                    {
                      "is": "RouterButton",
                      "props": {
                        "flat": true,
                        "routerMethod": "redirect",
                        "routerParams": {
                          "path": "forget-password"
                        },
                        "defaultSlots": [
                          {
                            "is": "i18nText",
                            "name": "default",
                            "props": {
                              "i18nKey": "Auth.ForgetPassword?"
                            }
                          }
                        ]
                      }
                    }
                  ]
                }
              },
              {
                "is": "DynamicComponent",
                "props": {
                  "style": {
                    "display": "flex"
                  },
                  "components": [
                    {
                      "is": "RouterButton",
                      "props": {
                        "flat": true,
                        "routerMethod": "redirect",
                        "routerParams": {
                          "path": "register"
                        },
                        "defaultSlots": [
                          {
                            "is": "i18nText",
                            "name": "default",
                            "props": {
                              "i18nKey": "Auth.Register"
                            }
                          }
                        ]
                      }
                    },
                    {
                      "is": "v-spacer"
                    },
                    {
                      "is": "GoogleLoginButton",
                      "props": {
                        "successActions": [
                          {
                            "type": "dispatch",
                            "otherParams": {
                              "name": "auth/login",
                              "type": "google"
                            },
                            "afterActions": [
                              {
                                "type": "router"
                              }
                            ]
                          }
                        ]
                      }
                    },
                    {
                      "is": "WechatLoginButton",
                      "props": {
                        "successActions": [
                          {
                            "type": "dispatch",
                            "otherParams": {
                              "name": "auth/login",
                              "type": "wechat"
                            },
                            "afterActions": [
                              {
                                "type": "router"
                              }
                            ]
                          }
                        ]
                      }
                    },
                    {
                      "is": "v-spacer"
                    },
                    {
                      "is": "v-btn",
                      "props": {
                        "flat": true,
                        "type": "submit"
                      },
                      "slots": [
                        {
                          "is": "i18nText",
                          "name": "default",
                          "props": {
                            "i18nKey": "Auth.Login"
                          }
                        }
                      ]
                    }
                  ]
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
