{
  "layout": "AsyncComponent",
  "layoutName": "CardLayout",
  "components": [{
    "is": "Form",
    "props": {
      "showPreFormOnSubmit": true,
      "showFormOnSubmit": false,
      "showPostFormOnLoading": false,
      "showLoadingOnSubmit": true,
      "form": {
        "password": "",
        "username": ""
      },
      "style": {
        "display": "flex",
        "flex-direction": "column",
        "min-height": "100%"
      },
      "fields": [{
          "name": "username",
          "label": "Auth.username",
          "props": {
            "required": true,
            "type": "email",
            "id": "email",
            "browser-autocomplete": "email",
            "autocomplete": "email",
            "aria-invalid": false
          },
          "component": "v-text-field",
          "validator": [
            "required",
            "isEmail"
          ]
        },
        {
          "name": "password",
          "label": "Auth.password",
          "props": {
            "required": true,
            "browser-autocomplete": "password",
            "autocomplete": "password"
          },
          "component": "DisplayPasswordField",
          "validator": [
            "required"
          ]
        }
      ],
      "submitActions": [{
        "type": "dispatch",
        "otherParams": {
          "name": "auth/login",
          "type": "local"
        },
        "afterActions": [{
          "type": "router"
        }]
      }]
    },
    "slots": [{
        "is": "DynamicComponent",
        "name": "pre-form",
        "props": {
          "style": {
            "flex-grow": 1
          },
          "components": [{
            "is": "v-img",
            "props": {
              "src": "/img/logo/swivel-logo-light.svg",
              "style": {
                "width": "484px"
              }
            }
          }]
        }
      },
      {
        "is": "DynamicComponent",
        "name": "post-form",
        "props": {
          "style": {
            "min-height": "120px"
          },
          "components": [{
              "is": "DynamicComponent",
              "props": {
                "style": {
                  "display": "flex"
                },
                "components": [{
                    "is": "v-spacer"
                  },
                  {
                    "is": "v-btn",
                    "props": {
                      "flat": true
                    },
                    "events": {
                      "click.stop": [{
                        "type": "router",
                        "otherParams": {
                          "func": "push",
                          "path": "forget-password"
                        }
                      }]
                    },
                    "slots": [{
                      "is": "i18nText",
                      "name": "default",
                      "props": {
                        "i18nKey": "Auth.ForgetPassword?"
                      }
                    }]
                  }
                ]
              }
            },
            {
              "is": "DynamicComponent",
              "props": {
                "style": {
                  "display": "flex"
                },
                "components": [{
                    "is": "v-btn",
                    "props": {
                      "flat": true
                    },
                    "events": {
                      "click.stop": [{
                        "type": "router",
                        "otherParams": {
                          "func": "push",
                          "path": "register"
                        }
                      }]
                    },
                    "slots": [{
                      "is": "i18nText",
                      "name": "default",
                      "props": {
                        "i18nKey": "Auth.Register"
                      }
                    }]
                  },
                  {
                    "is": "v-spacer"
                  },
                  {
                    "is": "GoogleLoginButton",
                    "props": {
                      "successActions": [{
                        "type": "dispatch",
                        "otherParams": {
                          "name": "auth/login",
                          "type": "google"
                        },
                        "afterActions": [{
                          "type": "router"
                        }]
                      }]
                    }
                  },
                  {
                    "is": "WechatLoginButton",
                    "props": {
                      "successActions": [{
                        "type": "dispatch",
                        "otherParams": {
                          "name": "auth/login",
                          "type": "wechat"
                        },
                        "afterActions": [{
                          "type": "router"
                        }]
                      }]
                    }
                  },
                  {
                    "is": "v-spacer"
                  },
                  {
                    "is": "v-btn",
                    "props": {
                      "flat": true,
                      "type": "submit"
                    },
                    "slots": [{
                      "is": "i18nText",
                      "name": "default",
                      "props": {
                        "i18nKey": "Auth.Login"
                      }
                    }]
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }]
}