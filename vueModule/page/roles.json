{
  "fillParent": true,
  "components": [
    {
      "is": "TableTool",
      "props": {
        "reportingKey": "roles",
        "jql": "roles",
        "back": "/admin",
        "clickFunction": {
          "type": "router",
          "otherParams": {
            "func": "push",
            "path": "/role/{{id}}"
          }
        },
        "showFilterBar": true,
        "enableShare": false,
        "enableSetting": false,
        "noPartyGroupFilters": true,
        "newReport": {
          "configurations": {
            "i18nContext": "RolePage",
            "clickable": true,
            "draggable": true,
            "sorting": {},
            "pagination": {
              "current": 0,
              "perPage": 20
            }
          }
        },

        "icons": [
          {
            "icon": "add",
            "click": [
              {
                "type": "router",
                "otherParams": {
                  "func": "push",
                  "path": "/role/create"
                }
              }
            ]
          }
        ],


        "filters": [
          {
            "name": "roleName",
            "type": "text"
          }
        ],
        "fieldOptions": [
          {
            "key": "id",
            "sql":{
              "classname":"ColumnExpression","table":"role","name":"id"
            },
            "hidden": true
          },
          {
            "key": "roleName"
          },
          {
            "key": "roleGroup"
          },

          {
            "label": "",
            "key": "canResetDefault",
            "sortable": false,
            "clickFunction": {
              "type": "axios",
              "otherParams": {
                "axiosParams": {
                  "url": "/api/role/resetDefault/{{row.id}}",
                  "method": "POST"
                }
              },
              "afterActions": [
                {
                  "type": "notify",
                  "otherParams": {
                    "notification": "Notify.resetDefaultSuccess"
                  }
                }
              ]
            },

            "tdComponent": {
              "hideIfFalse" : true,
              "props": {
                "slotComponents": [
                  {
                    "is": "icon",
                    "props": {
                      "icon": "refresh"
                    }
                  }
                ]
              }
            },
            "width": 50
          }

        ]
      }
    }
  ]
}
