{
  "fillParent": true,
  "components": [{
    "is": "Widget",
    "props": {
      "settingProp": {
        "overrideType": "api",
        "initAxiosParams": {
          "url": "api/api/{{context.$route.params.params}}"
        },
        "defaultAxiosParams": {
          "url": "default/api"
        },
        "validateAxiosParams": {
          "method": "post",
          "url": "api/api/validate/{{id}}"
        },
        "saveAxiosParams": {
          "method": "post",
          "url": "api/api"
        },
        "primaryKey": "id",
        "modeFunction": [
          "const modes = ['create', 'detail','edit'];",
          "const selectedMode = isNaN(Number(mode)) ? mode : 'detail'",
          "if (!modes.includes(selectedMode)) {throw new Error('This mode (' + selectedMode + ') is not allowed');}",
          "return selectedMode"
        ],
        "haveTermOnCreate": false,
        "haveTermOnEdit": false,
        "widgetComponentSetting": {
          "create": {
            "readonly": false,
            "stepper": 0,
            "next": false,
            "saveIcon": "create"
          },
          "detail": {
            "readonly": true
          },
          "edit": {
            "readonly": false,
            "stepper": 0,
            "saveIcon": "save"
          }
        }
      }
    }
  }]
}