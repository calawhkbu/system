{
    "layout": "MainLayout",
    "components": [
      {
        "is": "Widget",
        "props": {
          "initUrl": "api/invitation/{{id}}",
          "saveUrl": "api/invitation",
          "primaryKey": "id",
          "topSlots": [
            {
              "is": "v-btn",
              "props": {
                "flat": true,
                "icon": true
              },
              "events": {
                "click.stop": [
                  {
                    "type": "router",
                    "otherParams": {
                      "func": "go",
                      "go": -1
                    }
                  }
                ]
              },
              "slots": [
                {
                  "is": "Icon",
                  "props": {
                    "icon": "arrow_back"
                  }
                }
              ]
            },
            {
              "is": "I18nText",
              "props": {
                "class": "headline",
                "i18nKey": "InvitationPage.title",
                "swig": true
              }
            }
          ],
          "components": {
            "create": [
              {
                "is": "WidgetPanel",
                "props": {
                  "initUrl": "api/invitation/{{id}}",
                  "saveUrl": "api/invitation/create/create",
                  "primaryKey": "id"
                },
                "slots": [
                  {
                    "name": "default",
                    "is": "DynamicComponent",
                    "props": {
                      "components": [
                        {
                          "is": "AsyncComponent",
                          "props": {
                            "style": {
                              "margin-bottom": "25px"
                            },
                            "layoutName": "invitation/personForm"
                          }
                        },
                        {
                          "is": "AsyncComponent",
                          "props": {
                            "style": {
                              "margin-bottom": "25px"
                            },
                            "layoutName": "invitation/contactForm"
                          }
                        },
                        {
                          "is": "AsyncComponent",
                          "props": {
                            "style": {
                              "margin-bottom": "25px"
                            },
                            "layoutName": "invitation/partyForm"
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            ],
            "assignment": [
              {
                "is": "div",
                "props": {
                  "class": "xs-12 md-9",
                  "style": {
                    "padding-right": "4px"
                  }
                },
                "slots": [
                  {
                    "is": "DynamicComponent",
                    "props": {
                      "class": "grid",
                      "components": [
                        {
                          "is": "DynamicComponent",
                          "props": {
                            "class": "xs-12",
                            "style": {
                              "padding": "4px 0px"
                            },
                            "components": [
                              {
                                "is": "AsyncComponent",
                                "props": {
                                  "layoutName": "invitation/personForm"
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              },
              {
                "is": "div",
                "props": {
                  "class": "xs-12 md-3",
                  "style": {
                    "padding-left": "4px"
                  }
                },
                "slots": [
                  {
                    "is": "v-card",
                    "props": {
                      "style": {
                        "min-height": "200px"
                      }
                    }
                  }
                ]
              }
            ]
          }
        }
      }
    ]
  }
