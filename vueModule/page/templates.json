{
  "fillParent": true,
  "components": [
    {
      "is": "TableTool",
      "props": {
        "back": "/admin",
        "reportingKey": "templates",
        "jql": "templates",
        "noPartyGroupFilters": true,
        "showFilterBar": true,
        "enableShare": false,
        "enableSetting": false,
        "newReport": {
          "filters": {
            "extension": {
              "value": "pdf"
            },
            "isActive": true
          },
          "configurations": {
            "i18nContext": "TemplatePage",
            "clickable": true,
            "draggable": true,
            "sorting": {},
            "pagination": {
              "current": 0,
              "perPage": 20
            }
          }
        },

        "icons": [
          {
            "icon": "add",
            "click": [
              {
                "type": "router",
                "otherParams": {
                  "func": "push",
                  "path": "/template/create"
                }
              }
            ]
          }
        ],

        "fieldOptions": [
          {
            "key": "id",
            "hidden": true
          },


          {
            "key": "isActive",
            "boolean": true
          },

          {
            "label": "",
            "key": "canDelete",
            "sortable": false,
            "clickFunction": {
              "type": "axios",
              "otherParams": {
                "axiosParams": {
                  "url": "/api/template/delete",
                  "method": "POST",
                  "data" : {
                    "templateName" : "{{row.templateName}}"
                  }
                }
              },
              "afterActions": [
                {
                  "type": "notify",
                  "otherParams": {
                    "notification": "Notify.deleteSuccess"
                  }
                }
              ]
            },

            "tdComponent": {
              "hideIfFalse" : true,
              "props": {
                "slotComponents": [
                  {
                    "is": "icon",
                    "props": {
                      "icon": "delete"
                    }
                  }
                ]
              }
            },
            "width": 50
          },

          {
            "label": "",
            "key": "canRestore",
            "sortable": false,
            "clickFunction": {
              "type": "axios",
              "otherParams": {
                "axiosParams": {
                  "url": "/api/template/restore",
                  "method": "POST",
                  "data" : {
                    "templateName" : "{{row.templateName}}"
                  }
                }
              },
              "afterActions": [
                {
                  "type": "notify",
                  "otherParams": {
                    "notification": "Notify.restoreSuccess"
                  }
                }
              ]
            },

            "tdComponent": {
              "hideIfFalse" : true,
              "props": {
                "slotComponents": [
                  {
                    "is": "icon",
                    "props": {
                      "icon": "refresh"
                    }
                  }
                ]
              }
            },
            "width": 50
          }
        ],
        "filters": [
          {
            "name": "templateName",
            "i18nContext" : "TemplatePage",
            "type": "text"
          },
          {
            "name": "extension",
            "i18nContext" : "TemplatePage",
            "type": "text"
          }
        ],
        "clickFunction": {
          "type": "router",
          "otherParams": {
            "func": "push",
            "path": "/template/{{id}}"
          }
        }
      }
    }
  ]
}
