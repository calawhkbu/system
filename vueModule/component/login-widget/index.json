{
  "layout": "CardLayout",
  "components": [
    {
      "is": "Form",
      "props": {
        "showPreFormOnSubmit": true,
        "showFormOnSubmit": false,
        "showPostFormOnLoading": false,
        "showLoadingOnSubmit": false,
        "form": {
          "password": "",
          "username": ""
        },
        "style": {
          "display": "flex",
          "flex-direction": "column",
          "min-height": "100%"
        },
        "fields": [
          {
            "name": "username",
            "label": "Auth.username",
            "props": {
              "required": true,
              "type": "email",
              "browser-autocomplete": "email",
              "autocomplete": "email"
            },
            "component": "LoginField"
          },
          {
            "name": "password",
            "label": "Auth.password",
            "props": {
              "required": true,
              "browser-autocomplete": "password",
              "autocomplete": "password"
            },
            "component": "DisplayPasswordField",
            "validator": ["required"]
          }
        ],
        "submitActions": [
          {
            "type": "dispatch",
            "otherParams": {
              "name": "auth/login",
              "type": "local"
            },
            "afterActions": [
              {
                "type": "router",
                "otherParams": {
                  "func": "redirect",
                  "path": "{{ $store.external.domain }}"
                }
              }
            ]
          }
        ]
      },
      "slots": [
        {
          "is": "DynamicComponent",
          "name": "pre-form",
          "props": {
            "style": {
              "margin": "auto",
              "min-height": "150px"
            },
            "components": [
              {
                "is": "v-img",
                "props": {
                  "src": "https://360uat.swivelsoftware.asia/img/logo/swivel-logo-light.svg",
                  "style": {
                    "width": "484px",
                    "max-width": "100%"
                  }
                }
              }
            ]
          }
        },
        {
          "is": "DynamicComponent",
          "name": "post-form",
          "props": {
            "style": {
              "min-height": "100px"
            },
            "components": [
              {
                "is": "DynamicComponent",
                "props": {
                  "style": {
                    "display": "flex"
                  },
                  "components": [
                    {
                      "is": "v-spacer"
                    },
                    {
                      "is": "v-btn",
                      "props": {
                        "flat": true
                      },
                      "events": {
                        "click.stop": [
                          {
                            "type": "commit",
                            "otherParams": {
                              "name": "external/goToForgetPassword"
                            }
                          }
                        ]
                      },
                      "slots": [
                        {
                          "is": "i18nText",
                          "name": "default",
                          "props": {
                            "i18nKey": "Auth.ForgetPassword?"
                          }
                        }
                      ]
                    }
                  ]
                }
              },
              {
                "is": "DynamicComponent",
                "props": {
                  "style": {
                    "display": "flex"
                  },
                  "components": [
                    {
                      "is": "WechatLoginButton",
                      "props": {
                        "successActions": [
                          {
                            "type": "dispatch",
                            "otherParams": {
                              "name": "auth/login",
                              "type": "wechat"
                            },
                            "afterActions": [
                              {
                                "type": "router",
                                "otherParams": {
                                  "func": "redirect",
                                  "path": "{{ $store.external.domain }}"
                                }
                              }
                            ]
                          }
                        ]
                      }
                    },
                    {
                      "is": "v-spacer"
                    },
                    {
                      "is": "v-btn",
                      "props": {
                        "flat": true,
                        "type": "submit"
                      },
                      "slots": [
                        {
                          "is": "i18nText",
                          "name": "default",
                          "props": {
                            "i18nKey": "Auth.Login"
                          }
                        }
                      ]
                    }
                  ]
                }
              }
            ]
          }
        }
      ]
    }
  ]
}