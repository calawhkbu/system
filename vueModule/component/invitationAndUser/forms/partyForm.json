{
  "layout": "v-card",
  "components": [
    {
      "is": "WidgetForm",
      "props": {
        "fields": [

          {
            "label": "InvitationAndUserForm.Parties",
            "name": "person.parties",
            "component": "AsyncAutoSuggest",
            "class": "xs-12 md-6",

            "more": [
              {
                "name": "id",
                "selector": "id"
              }
            ],
            "props": {

              "multiple" : true,
              "canCreate" : true,

              "searchValueParams": {
                "method": "POST",
                "url": "api/party/query/party_auto_suggest",
                "data": {
                  "subqueries": {
                    "id": {
                      "value": "{{context.autoSuggestModel}}"
                    }
                  }
                }
              },
              "searchTextParams": {

                "url": "api/party/query/party_auto_suggest",
                "method": "POST",
                "data" : {
                  "subqueries": {
                    "q": {
                      "value": "{{context.search}}"
                    },
                    "isBranch": {
                      "value": 1
                    }
                  },
                  "limit": 5
                }
              },
              "item-text": "name",
              "item-value": "id"
            }
          }
        ]
      }
    }
  ]
}
