{
  "layout": "Plugin",
  "name": "SopTask",
  "transition": "slide-y-reverse-transition",
  "lazy": true,
  "hide-overlay": true,
  "remote": true,
  "shareProps": {
    "i18nContext": "SopTask",
    "iconType": "",
    "icon": "status",
    "iconMap": {
      "Open": "assignment",
      "Due Today": "assignment_late",
      "Due": "assignment_late",
      "Dead": "warning"
    },
    "titleKey": "name",
    "subTitleKeys": ["category"]
  },
  "baseSummaryProps": {
    "size": -3
  },
  "baseDetailProps": {
    "checkToAction": true,
    "headers": [
      {
        "key": "hasRemark",
        "boolean": true,
        "i18nContext": "SopTask",
        "tooltip": "hasRemarkMsg",
        "showTooltipWhen": "true",
        "trueIcon": "comment",
        "trueColor": "#f7f766",
        "falseIcon": "",
        "badgeKey": "noOfRemarks",
        "label": "",
        "width": 24
      },
      {
        "key": "name",
        "width": 200
      },
      {
        "key": "system",
        "width": 60,
        "align": "center"
      },
      {
        "key": "category",
        "width": 120
      },
      {
        "key": "startAt",
        "format": "YYYY/MM/DD",
        "width": 90
      },
      {
        "key": "dueAt",
        "format": "YYYY/MM/DD",
        "width": 90
      }
    ],
    "rowStyle": {
      "Closed": {
        "backgroundColor": "gray",
        "opacity": 0.6
      },
      "Done": {
        "backgroundColor": "darkgray",
        "opacity": 0.8
      },
      "Not Ready": {
        "opacity": 0.6
      },
      "Due Today": {
        "backgroundColor": "#fdc57f"
      },
      "Due": {
        "backgroundColor": "#ffcccb"
      },
      "Dead": {
        "backgroundColor": "#ffcccb"
      }
    }
  }
}