{
  "layout": "Plugin",
  "name": "SopTask",
  "transition": "slide-y-reverse-transition",
  "lazy": true,
  "hide-overlay": true,
  "remote": true,
  "shareProps": {
    "i18nContext": "SopTask",
    "iconType": "",
    "icon": "status",
    "iconMap": {
      "Open": "assignment",
      "Done": "assignment_turned_in",
      "Due": "assignment_late",
      "Dead": "warning"
    },
    "titleKey": "name",
    "subTitleKeys": ["category"]
  },
  "baseSummaryProps": {
    "size": -3
  },
  "baseDetailProps": {
    "headers": [
      {
        "key": "checkbox",
        "checkbox": true,
        "showCheckAll": true
      },
      {
        "key": "isDone",
        "boolean": true,
        "i18nContext": "SopTask",
        "tooltip": "isDoneMsg",
        "showTooltipWhen": "true",
        "label": "",
        "width": 24
      },
      {
        "key": "hasRemark",
        "boolean": true,
        "i18nContext": "SopTask",
        "tooltip": "hasRemarkMsg",
        "showTooltipWhen": "true",
        "trueIcon": "comment",
        "trueColor": "#e7e79d",
        "falseIcon": "",
        "badgeKey": "noOfRemarks",
        "label": "",
        "width": 24
      },
      {
        "key": "system",
        "width": 60,
        "align": "center"
      },
      {
        "key": "category",
        "width": 120
      },
      {
        "key": "name",
        "width": 200
      },
      {
        "key": "startAt",
        "format": "YYYY/MM/DD",
        "width": 90
      },
      {
        "key": "dueAt",
        "format": "YYYY/MM/DD",
        "width": 90
      }
    ]
  }
}