{
  "layout": "v-card",
  "components": [
    {
      "is": "WidgetForm",
      "props": {
        "fields": [
          {
            "label": "InvitationPage.email",
            "name": "person.userName",
            "component": "v-text-field",
            "class": "xs-6",
            "canEdit": "return mode === 'create' "
          },

          {
            "label": "InvitationPage.erpCode",
            "name": "person.thirdPartyCode.erp",
            "class": "xs-6",
            "component": "v-text-field"
          },
          {
            "label": "InvitationPage.firstName",
            "name": "person.firstName",
            "component": "v-text-field",
            "class": "xs-3"
          },
          {
            "label": "InvitationPage.lastName",
            "name": "person.lastName",
            "component": "v-text-field",
            "class": "xs-3"
          },
          {
            "label": "InvitationPage.displayName",
            "name": "person.displayName",
            "component": "v-text-field",
            "class": "xs-6"
          },
          {
            "label": "InvitationAndUserForm.Parties",
            "name": "person.parties",
            "component": "AsyncAutoSuggest",
            "class": "xs-12 md-6",
            "props": {
              "multiple": true,
              "showValue": false,
              "searchTextParams": {
                "url": "api/party/query/party_auto_suggest",
                "method": "POST",
                "data": {
                  "subqueries": {
                    "q": {
                      "value": "{{context.search}}"
                    },
                    "isBranch": {
                      "value": 1
                    }
                  },
                  "limit": 5
                }
              },
              "item-text": "name",
              "item-value": "id"
            }
          },
          {
            "label": "InvitationAndUserForm.Roles",
            "name": "person.roles",
            "component": "AsyncAutoSuggest",
            "props": {
              "multiple": true,
              "showValue": false,
              "searchTextParams": {
                "url": "api/role/query/role",
                "method": "POST",
                "data": {
                  "subqueries": {
                    "q": {
                      "value": "{{context.search}}"
                    },
                    "isBranch": {
                      "value": 1
                    }
                  },
                  "limit": 5
                }
              },
              "item-text": "roleName",
              "item-value": "id"
            }
          }
        ]
      }
    }
  ]
}
