{
  "components": [
    {
      "is": "Dialog",
      "props": {
        "width": "30%",
        "button": {
          "layout": "v-btn",
          "flat": true,
          "components": [
            {
              "is": "I18nText",
              "props": {
                "i18nKey": "UserProfilePage.ChangePassword"
              }
            }
          ]
        }
      },
      "slots": [
        {
          "is": "DynamicComponent",
          "props": {
            "layout": "v-card",
            "components": [
              {
                "is": "Form",
                "props": {
                  "form": {
                    "password": "",
                    "confirmPassword": ""
                  },
                  "style": {
                    "min-height": "100%"
                  },
                  "fields": [
                    {
                      "name": "password",
                      "label": "Auth.password",
                      "component": "DisplayPasswordField",
                      "validator": [
                        "required"
                      ]
                    },
                    {
                      "name": "confirmPassword",
                      "label": "Auth.confirmPassword",
                      "component": "DisplayPasswordField",
                      "validator": [
                        "required",
                        {
                          "type": "compare",
                          "value2": "password"
                        }
                      ]
                    }
                  ],
                  "submitActions": [
                    {
                      "name": "auth/changePasswordByToken",
                      "errorSubmitMessage": "ChangePassword.fail",
                      "afterActions": [
                        {
                          "type": "notify",
                          "notification": "ChangePassword.success",
                          "needTranslate": true
                        }
                      ]
                    }
                  ]
                },
                "slots": [
                  {
                    "name": "pre-form",
                    "is": "DynamicComponent",
                    "props": {
                      "layout": "v-card-title",
                      "components": [
                        {
                          "is": "I18nText",
                          "props": {
                            "i18nKey": "UserProfilePage.ChangePassword"
                          }
                        },
                        {
                          "is": "v-spacer"
                        }
                      ]
                    }
                  },
                  {
                    "name": "post-form",
                    "is": "DynamicComponent",
                    "props": {
                      "style": {
                        "display": "flex"
                      },
                      "components": [
                        {
                          "is": "v-spacer"
                        },
                        {
                          "is": "v-btn",
                          "props": {
                            "flat": true,
                            "type": "submit"
                          },
                          "slots": [
                            {
                              "is": "i18nText",
                              "name": "default",
                              "props": {
                                "i18nKey": "Auth.ChangePassword"
                              }
                            }
                          ]
                        }
                      ]
                    }
                  }
                ]
              }
            ]
          }
        }
      ]
    }
  ]
}
