{
  "components": [{
    "is": "WidgetForm",
    "props": {
      "fields": [

        {
          "label": "TemplatePage.templateName",
          "name": "templateName",
          "component": "v-text-field",
          "class": "xs-12 md-6"
        },
        {
          "label": "TemplatePage.extension",
          "name": "extension",
          "component": "v-text-field",
          "class": "xs-12 md-6"
        },
        {
          "label": "TemplatePage.format",
          "name": "format",
          "component": "v-text-field",
          "class": "xs-12 md-6"
        }, 
        {
          "label": "TemplatePage.base64String",
          "name": "base64String",
          "component": "v-text-field",
          "class": "xs-12 md-6"
        },
        {
          "label": "TemplatePage.key",
          "name": "templateName",
          "component": "button-field",
          "class": "xs-12 md-6",

          "slots": [
            {
              "is": "Icon",
              "props": {
                "icon": "refresh"
              }
            }
          ],
          "props" : {

            "flat": true,
            "icon": true,

            "events" : {

              "click.stop": [
                {
                  "type": "axios",
                  "otherParams": {

                    "axiosParams" : {

                      "method" : "POST",
                      "url" : "/api/template/download",
                      "data" : {
                        "templateName" : "{{context.fixValue}}"
                      }
                    }
                  }
                }
              ]
            }
          }
        }
      ]
    }
  }]
}