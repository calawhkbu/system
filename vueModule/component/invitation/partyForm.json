{
  "layout": "v-card",
  "components": [
    {
      "is": "WidgetForm",
      "props": {
        "fields": [
          {
            "name": "parties",
            "component": "AsyncAutoSuggest",
            "props": {
              "multiple": true,
              "url": "api/party/query/party",
              "searchValueParams": "{ \"fields\": [\"pa.id\", \"name\"],\"subqueries\": { \"id\": { \"value\": {{query}} }, \"isBranch\": { \"value\": 1 } } }",
              "searchTextParams": {
                "fields": ["pa.id", "name"],
                "subqueries": {
                  "q": {
                    "value": "{{query}}"
                  },
                  "isBranch": {
                    "value": 1
                  }
                },
                "limit": 5
              },
              "cache-items": true,
              "hide-no-data": true,
              "hide-details": true,
              "item-text": "name",
              "item-value": "id"
            }
          },
          {
            "name": "roles",
            "component": "AsyncAutoSuggest",
            "props": {
              "multiple": true,
              "url": "api/role",
              "searchValueParams": "{\"where\": { \"id\": {{query}} }}",
              "searchTextParams": {
                "where": {
                  "roleName": {
                    "$regexp": "{{query}}"
                  }
                },
                "limit": 5
              },
              "cache-items": true,
              "hide-no-data": true,
              "hide-details": true,
              "item-text": "roleName",
              "item-value": "id"
            }
          }
        ]
      }
    }
  ]
}
