{
  "layout": "v-card",
  "components": [{
    "is": "WidgetForm",
    "props": {
      "fields": [{
        "label": "ProductPage.productCode",
        "name": "productCode",
        "component": "v-text-field"
      }, {
        "label": "ProductPage.skuCode",
        "name": "skuCode",
        "component": "v-text-field"
      }, {
        "label": "ProductPage.name",
        "name": "name",
        "component": "v-text-field"
      }, {
        "label": "ProductPage.description",
        "name": "description",
        "component": "v-text-field"
      }, {
        "label": "ProductPage.productCategoryCode",
        "name": "productCategory.productCategoryCode",
        "component": "v-text-field"
      }, {
        "label": "ProductPage.definition",
        "name": "definition",
        "component": "MultiField",
        "props": {
          "onGetFixValueOverrideFunc": [
            "return Array.isArray(value) ? value.map(v => v.fieldName + ': ' + v.values[0]) : [value.fieldName + ': ' + value.values[0]]"
          ]
        }
      }]
    }
  }]
}
