{
  "layout": "v-card",
  "components": [{
    "is": "WidgetForm",
    "props": {
      "fields": [{
        "label": "ProductPage.productCode",
        "name": "productCode",
        "component": "v-text-field"
      }, {
        "label": "ProductPage.skuCode",
        "name": "skuCode",
        "component": "v-text-field"
      }, {
        "label": "ProductPage.name",
        "name": "name",
        "component": "v-text-field"
      }, {
        "label": "ProductPage.description",
        "name": "description",
        "component": "v-text-field"
      }, {
        "label": "ProductPage.productCategoryCode",
        "name": "productCategoryId",
        "component": "AsyncSelect",
        "props": {
          "required": true,
          "axiosParams": {
            "url": "api/product-category",
            "method": "GET"
          },
          "item-text": "name",
          "item-value": "id",
          "showValue": false
        },
        "events": {
          "input": [{
            "type": "function",
            "otherParams": {
              "func": [
                "console.log(context)",
                ""
              ]
            }
          }]
        }
      }, {
          "label": "ProductPage.definition",
          "name": "definition",
          "component": "ProductDefinationChooseField",
          "key": "{{form.productCategoryId}}",
          "props": {
            "name": "ProductPage.definition",
            "required": true,
            "CategoryId": "{{productCategoryId}}",
            "axiosParams": "return {url: 'api/product-category/',  method: 'GET'}"
          }
        }
      ]
    }
  }]
}
