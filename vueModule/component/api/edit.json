{
  "class": "grid",
  "components": [{
    "is": "DynamicComponent",
    "props": {
      "class": "xs-12 grid min-height-28 align-item-center full-width",
      "components": [{
          "is": "v-btn",
          "props": {
            "small": true,
            "flat": true,
            "icon": true
          },
          "slots": [{
            "is": "Icon",
            "props": {
              "icon": "arrow_back"
            }
          }],
          "events": {
            "click.stop": [{
              "type": "dispatch",
              "otherParams": {
                "name": "widget/changeMode",
                "mode": "detail"
              }
            }]
          }
        }, {
          "is": "I18nText",
          "props": {
            "i18nContext": "ApiPage",
            "i18nKey": "title",
            "i18nOptions": {
              "id": "{{context.$store.state.widget.data.name}}"
            }
          }
        }, {
          "is": "v-spacer"
        },
        {
          "is": "WidgetSave",
          "props": {
            "small": true,
            "flat": true,
            "icon": true,
            "color": "primary"
          }
        }
      ]
    }
  }, {
    "is": "DynamicComponent",
    "props": {
      "layout": "v-card",
      "class": "xs-12 margin-bottom-8",
      "components": [{
        "is": "WidgetForm",
        "props": {
          "class": "xs-12",
          "fields": [{
            "label": "ApiPage.name",
            "name": "name",
            "component": "v-text-field",
            "class": "xs-12"
          }]
        }
      }]
    }
  }]
}