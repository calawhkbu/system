{
  "layout": "CardLayout",
  "components": [
    {
      "is": "SimpleForm",
      "props": {
        "form": {
          "username": ""
        },
        "style": {
          "min-height": "100%"
        },
        "fields": [
          {
            "name": "username",
            "label": "Auth.username",
            "props": {
              "type": "email"
            },
            "component": "v-text-field",
            "validator": [
              "required",
              "isEmail"
            ]
          }
        ],
        "submitActions": [
          {
            "name": "auth/forgetPassword",
            "afterActions": [
              {
                "type": "notify",
                "notification": "ResetPassword.success",
                "needTranslate": true
              }
            ]
          }
        ],
        "errorSubmitMessage": "ResetPassword.fail"
      },
      "slots": [
        {
          "is": "DynamicComponent",
          "name": "pre-form",
          "props": {
            "style": {
              "margin-bottom": "25px"
            },
            "components": [
              {
                "is": "v-img",
                "props": {
                  "src": "/img/logo/swivel-logo-light.svg",
                  "style": {
                    "width": "484px"
                  }
                }
              }
            ]
          }
        },
        {
          "is": "DynamicComponent",
          "name": "post-form",
          "props": {
            "style": {
              "display": "flex"
            },
            "components": [
              {
                "is": "RouterButton",
                "props": {
                  "flat": true,
                  "routerMethod": "redirect",
                  "routerParams": {
                    "path": "login"
                  }
                },
                "slots": [
                  {
                    "is": "i18nText",
                    "name": "default",
                    "props": {
                      "i18nKey": "Cancel"
                    }
                  }
                ]
              },
              {
                "is": "v-spacer"
              },
              {
                "is": "v-btn",
                "props": {
                  "flat": true,
                  "type": "submit"
                },
                "slots": [
                  {
                    "is": "i18nText",
                    "name": "default",
                    "props": {
                      "i18nKey": "Auth.ResetPassword"
                    }
                  }
                ]
              }
            ]
          }
        }
      ]
    }
  ]
}