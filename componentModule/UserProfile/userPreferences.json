{
  "components": [
    {
      "is": "v-card",
      "props": {
        "style": {
          "margin-bottom": "20px"
        }
      },
      "slots": [
        {
          "name": "default",
          "is": "DynamicComponent",
          "props": {
            "components": [
              {
                "is": "v-card-title",
                "props": {
                  "primary-title": true
                },
                "slots": [
                  {
                    "name": "default",
                    "is": "I18nText",
                    "props": {
                      "class": "title",
                      "i18nKey": "UserProfilePage.UserPreferences"
                    }
                  }
                ]
              },
              {
                "is": "SimpleForm",
                "props": {
                  "form": "$store.state.config",
                  "submitActions": [
                    {
                      "name": "config/updateAll",
                      "errorSubmitMessage": "UserProfilePage.UpdateUserPreferencesFail",
                      "afterActions": [
                        {
                          "type": "notify",
                          "notification": "UserProfilePage.UpdateUserPreferencesSuccess"
                        }
                      ]
                    }
                  ],
                  "fields": [
                    {
                      "label": "config.locale",
                      "name": "locale",
                      "component": "AsyncSelect",
                      "class": "xs-12 md-6",
                      "props": {
                        "item-text": "value",
                        "item-value": "key",
                        "url": "api/i18n/available-languages"
                      }
                    },
                    {
                      "label": "config.timezone",
                      "name": "timezone",
                      "component": "AsyncSelect",
                      "class": "xs-12 md-6",
                      "props": {
                        "item-text": "name",
                        "item-value": "name",
                        "type": "local",
                        "url": "$moment.tz.names"
                      }
                    },
                    {
                      "label": "config.dateFormat",
                      "name": "dateFormat",
                      "component": "v-text-field",
                      "class": "xs-12 md-4"
                    },
                    {
                      "label": "config.timeFormat",
                      "name": "timeFormat",
                      "component": "v-text-field",
                      "class": "xs-12 md-4"
                    },
                    {
                      "label": "config.dateTimeFormat",
                      "name": "dateTimeFormat",
                      "component": "v-text-field",
                      "class": "xs-12 md-4"
                    }
                  ]
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
