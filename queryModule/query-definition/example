import { QueryDef } from 'classes/query/QueryDef'
import { Query, TableOrSubquery, IsNullExpression } from 'node-jql'

const query = new QueryDef(new Query({
  $from: new TableOrSubquery(['', ''])
}))

query.register('isActive', new Query({
  $where: [
    new IsNullExpression({ left: new ColumnExpression(['', 'deletedAt']) }),
    new IsNullExpression({ left: new ColumnExpression(['', 'deletedBy']) }),
  ]
}))

export default query
