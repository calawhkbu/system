{
  "components": [{
    "is": "Widget",
    "props": {
      "settingProp": {
        "overrideType": "product",
        "initAxiosParams": {
          "url": "api/product/{{context.$route.params.params}}"
        },
        "defaultAxiosParams": {
          "url": "default/product"
        },
        "validateAxiosParams": {
          "method": "post",
          "url": "api/product/validate/{{id}}"
        },
        "saveAxiosParams": {
          "method": "post",
          "url": "api/product"
        },
        "primaryKey": "id",
        "modeFunction": [
          "const modes = ['create', 'detail', 'edit'];",
          "const selectedMode = isNaN(Number(mode)) ? mode : 'detail';",
          "if (!modes.includes(selectedMode)) {",
          "throw new Error(`This mode (${selectedMode}) is not allowed!`)",
          "}",
          "return selectedMode"
        ],
        "haveTermOnCreate": false,
        "haveTermOnEdit": false,
        "widgetComponentSetting": {
          "create": {
            "readonly": false,
            "stepper": 0,
            "next": false,
            "saveIcon": "create"
          },
          "detail": {
            "readonly": true
          },
          "edit": {
            "readonly": false,
            "stepper": 0,
            "saveIcon": "save"
          }
        }
      }
    }
  }]
}


