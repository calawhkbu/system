{
  "addAttrsToComponent": true,
  "components": [{
    "is": "Widget",
    "props": {
      "settingProp": {
        "afterSaveDontCheckId": true,
        "afterSaveAction": [{
          "type": "emit-global",
          "otherParams": {
            "name": "save-data"
          }
        }],
        "overrideType": "booking",
        "initAxiosParams": {
          "url": "api/booking/bookingNo/{{context.finalId}}"
        },
        "defaultAxiosParams": {
          "url": "default/booking/{{state.template}}"
        },
        "validateAxiosParams": {
          "method": "post",
          "url": "api/booking/validate/{{id}}"
        },
        "saveAxiosParams": {
          "method": "post",
          "url": "api/booking"
        },
        "primaryKey": "id",
        "modeFunction": [
          "const modes = ['create']",
          "return modes.includes(mode) ? mode : 'detail'"
        ],
        "haveTermOnCreate": true,
        "haveTermOnEdit": false,
        "widgetComponentSetting": {
          "quick-create": {
            "readonly": false
          },
          "create": {
            "readonly": false,
            "stepper": 0,
            "next": false,
            "saveIcon": "create"
          },
          "detail": {
            "readonly": true
          },
          "edit": {
            "readonly": false,
            "stepper": 0,
            "saveIcon": "save"
          }
        }
      }
    }
  }]
}